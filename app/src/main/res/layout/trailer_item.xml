<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/activity_vertical_margin">

   <!-- The icon used here is taken
   from http://www.iconarchive.com/show/android-icons-by-icons8/Photo-Video-start-icon.html-->
    <TextView
        android:id="@+id/txt_trailer_title"
        style="@style/AppTheme.Heading"
        android:text="@string/trailers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/component_margin"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txt_trailer_name"
        style="@style/AppTheme.Text"
        android:drawableStart="@drawable/video_play_icon"
        android:drawableLeft="@drawable/video_play_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/component_margin" />

</LinearLayout>